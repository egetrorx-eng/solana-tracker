{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@lib/*": ["src/lib/*"],
      "@styles/*": ["src/styles/*"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "types": ["@sanity/astro/module"]
  },
  "include": ["src/**/*", "stack.config.js", "sanity.config.ts"],
  "exclude": ["node_modules", "dist", "sanity/node_modules", "supabase"]
}

