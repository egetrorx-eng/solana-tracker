---
/**
 * Footer Component
 * ═══════════════════════════════════════════════════════════════
 * Site footer with links and copyright.
 */

import stackConfig from '../../../stack.config.js';

const currentYear = new Date().getFullYear();
---

<footer class="bg-neutral-900 text-white">
  <div class="container-wide py-12 md:py-16">
    <div class="grid md:grid-cols-4 gap-8 md:gap-12">
      <!-- Brand -->
      <div class="md:col-span-2">
        <a href="/" class="font-display font-bold text-xl text-white">
          {stackConfig.project.name}
        </a>
        <p class="mt-4 text-neutral-400 max-w-md">
          {stackConfig.project.description}
        </p>
      </div>

      <!-- Quick Links -->
      <div>
        <h4 class="font-semibold mb-4 text-white">Navigation</h4>
        <ul class="space-y-2">
          <li>
            <a href="/" class="text-neutral-400 hover:text-white transition-colors">
              Startseite
            </a>
          </li>
          <li>
            <a href="/#services" class="text-neutral-400 hover:text-white transition-colors">
              Leistungen
            </a>
          </li>
          <li>
            <a href="/#about" class="text-neutral-400 hover:text-white transition-colors">
              Über uns
            </a>
          </li>
          <li>
            <a href="/#contact" class="text-neutral-400 hover:text-white transition-colors">
              Kontakt
            </a>
          </li>
        </ul>
      </div>

      <!-- Legal -->
      <div>
        <h4 class="font-semibold mb-4 text-white">Rechtliches</h4>
        <ul class="space-y-2">
          <li>
            <a href="/impressum" class="text-neutral-400 hover:text-white transition-colors">
              Impressum
            </a>
          </li>
          <li>
            <a href="/datenschutz" class="text-neutral-400 hover:text-white transition-colors">
              Datenschutz
            </a>
          </li>
        </ul>
      </div>
    </div>

    <!-- Copyright -->
    <div class="mt-12 pt-8 border-t border-neutral-800">
      <p class="text-neutral-500 text-sm text-center">
        &copy; {currentYear} {stackConfig.project.client}. Alle Rechte vorbehalten.
      </p>
    </div>
  </div>
</footer>


