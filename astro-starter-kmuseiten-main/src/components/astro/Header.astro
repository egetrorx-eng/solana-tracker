---
/**
 * Header Component
 * ═══════════════════════════════════════════════════════════════
 * Site header with navigation.
 */

import stackConfig from '../../../stack.config.js';

interface Props {
  transparent?: boolean;
}

const { transparent = false } = Astro.props;

const navLinks = [
  { href: '/#services', label: 'Leistungen' },
  { href: '/#about', label: 'Über uns' },
  { href: '/#contact', label: 'Kontakt' },
];
---

<header
  class:list={[
    'fixed top-0 left-0 right-0 z-50 transition-all duration-300',
    transparent ? 'bg-transparent' : 'bg-white/90 backdrop-blur-md border-b border-neutral-200',
  ]}
>
  <div class="container-wide">
    <nav class="flex items-center justify-between h-16 md:h-20">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-2 font-display font-bold text-xl">
        <span class="text-primary-600">{stackConfig.project.name}</span>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center gap-8">
        {navLinks.map(link => (
          <a
            href={link.href}
            class="text-neutral-600 hover:text-neutral-900 transition-colors font-medium"
          >
            {link.label}
          </a>
        ))}
        <a href="/#contact" class="btn-primary text-sm py-2 px-4">
          Anfrage starten
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button
        type="button"
        class="md:hidden p-2 -mr-2 text-neutral-600 hover:text-neutral-900"
        aria-label="Menü öffnen"
        data-mobile-menu-trigger
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </nav>
  </div>

  <!-- Mobile Navigation -->
  <div
    class="md:hidden hidden fixed inset-0 bg-white z-50"
    data-mobile-menu
  >
    <div class="container-wide py-4">
      <div class="flex items-center justify-between mb-8">
        <a href="/" class="font-display font-bold text-xl text-primary-600">
          {stackConfig.project.name}
        </a>
        <button
          type="button"
          class="p-2 -mr-2 text-neutral-600 hover:text-neutral-900"
          aria-label="Menü schliessen"
          data-mobile-menu-close
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
      <div class="flex flex-col gap-4">
        {navLinks.map(link => (
          <a
            href={link.href}
            class="text-lg font-medium text-neutral-800 hover:text-primary-600 py-2"
            data-mobile-link
          >
            {link.label}
          </a>
        ))}
        <a href="/#contact" class="btn-primary text-center mt-4" data-mobile-link>
          Anfrage starten
        </a>
      </div>
    </div>
  </div>
</header>

<script>
  // Mobile menu toggle
  const trigger = document.querySelector('[data-mobile-menu-trigger]');
  const menu = document.querySelector('[data-mobile-menu]');
  const closeBtn = document.querySelector('[data-mobile-menu-close]');
  const links = document.querySelectorAll('[data-mobile-link]');

  function openMenu() {
    menu?.classList.remove('hidden');
    document.body.style.overflow = 'hidden';
  }

  function closeMenu() {
    menu?.classList.add('hidden');
    document.body.style.overflow = '';
  }

  trigger?.addEventListener('click', openMenu);
  closeBtn?.addEventListener('click', closeMenu);
  links.forEach(link => link.addEventListener('click', closeMenu));
</script>


